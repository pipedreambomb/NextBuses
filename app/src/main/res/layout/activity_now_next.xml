<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc" tools:context=".NowNext">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#000000"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Next bus"
            android:id="@+id/headerNext"
            android:layout_gravity="center"
            android:textColor="#aaaaaa"
            android:textSize="24pt"
            android:layout_marginTop="150dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="in 5 mins leaving 22 for the train"
            android:id="@+id/infoNext"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="The one after"
            android:id="@+id/headerOneAfter"
            android:layout_gravity="center"
            android:textColor="#888888"
            android:textSize="24pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="in 25 mins leaving 4 mins for the train"
            android:id="@+id/infoOneAfter"
            android:layout_gravity="center"
            android:textColor="#dddddd"
            android:layout_marginTop="20dp" />
    </LinearLayout>

</FrameLayout>
